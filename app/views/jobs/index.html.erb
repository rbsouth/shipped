			<div class="jobs row justify-content-center">
				<%= render @jobs %>
			</div>
		</div>
  </div>
  <div class="tab-pane fade" id="boats" role="tabpanel" aria-labelledby="boats-tab">
  	<%= render '/boats/boat_form' %>
  	<div class="container">
			<div class="boats row justify-content-center">
				<%= render @boats %>
			</div>
		</div>
  </div>
  <div class="tab-pane fade" id="user-info" role="tabpanel" aria-labelledby="user-info-tab">
  	<%= render 'users/user' %>
  </div>
</div>